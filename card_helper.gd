func get_card_resource_path(card_id: String) -> String:
	# Mapping of set abbreviations to folder names
	var set_map = {
		"WTR": "WelcomeToRathe",
		"ARC": "ArcaneRising",
		"CRU": "CrucibleOfWar",
		"MON": "Monarch",
		"ELE": "TalesOfAria",
		"EVR": "Everfest",
		"1HP": "HistoryPackOne",
		"UPR": "Uprising",
		"DYN": "Dynasty",
		"2HP": "HistoryPackTwo",
		"OUT": "Outsiders",
		"DTD": "DuskTillDawn",
		"EVO": "BrightLights",
		"HVY": "HeavyHitters",
		"MST": "PartTheMistveil",
		"ROS": "Rosetta",
		"HNT": "TheHunted",
		"SEA": "HighSeas",
		"MPG": "MasteryPackGuardian",
		"SSL": "SuperSlam"
	}
	# Extract set abbreviation from card_id (first part before numbers)
	var set_abbr = ""
	for abbr in set_map.keys():
		if card_id.begins_with(abbr):
			set_abbr = abbr
			break
	if set_abbr == "":
		return "" # Unknown set
	var folder = set_map[set_abbr]
	return "res://CardResources/%s/%s.res" % [folder, card_id]
